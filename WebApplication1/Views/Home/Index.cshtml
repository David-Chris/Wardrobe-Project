@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>DressIT</h1>
    <p class="lead">DressIT is a sweet online app that allows you to upload your wardrobe and mix and match outfits!</p>
</div>

<div class="row">
    <div class="col-md-6">
        <h2>@Html.ActionLink("Wardrobe", "Index","WardrobeItems")</h2>
        <p>
            View your current wardrobe, add/remove clothes to your wardrobe.
        </p>
        <p><a class="btn btn-default" href="@Url.Action("", "WardrobeItems","WardrobeItems")">Wardrobe</a></p>
    </div>
    <div class="col-md-6">
        <h2>@Html.ActionLink("Outfits", "Index", "Outfits")</h2>
        <p></p>
        <p><a class="btn btn-default" href="@Url.Action("","Outfits","Outfits")">Outfits</a></p>
        <p>View your current outfits, add/remove outfits</p>
    </div>

</div>